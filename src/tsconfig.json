{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2015",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "lib": [
      "es2018", "es2017", "dom", "es6"
    ],
    "baseUrl": "."
  },
  "include": [
    "ui/**/*.ts",
    "utils/**/*.ts",
    "angular/**/*.ts",
    "references.d.ts"
  ],
  "files": [
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
